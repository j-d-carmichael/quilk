        "sound": true
      },
      "rsync"         : {
        "set"           : ["--compress-level=1"],
        "localPath"     : "/cygdrive/d/test_project/",
        "remote"        : "www-data@8.9.10.110",
        "serverPath"    : "/var/vhosts/service-test/"
      }
    }
  },

  "email": {
